      "secondary": "bg-white hover:bg-purple-50 text-purple-500 border border-purple-200 px-4 py-2 rounded-lg text-sm font-medium",
      "destructive": "bg-red-500 hover:bg-red-600 text-white px-6 py-3 rounded-lg text-sm font-medium w-full flex items-center justify-center space-x-2"
