    "sectionHeaders": {
      "container": {
        "background": "bg-white",
        "padding": "px-6 py-4",
        "borderBottom": "border-b border-gray-200",
        "display": "flex items-center",
        "spacing": "space-x-3",
        "context": "Section headers with icons - white background"
      },
      "icon": {
        "size": "h-5 w-5",
        "color": "text-purple-500",
        "context": "Section icons - purple color only"
