    },
    "SettingItem": {
      "baseClass": "px-6 py-4 border-b border-gray-200 last:border-b-0 flex items-center justify-between bg-white",
      "titleClass": "text-base font-medium text-gray-900",
      "subtitleClass": "text-sm text-gray-500 mt-1"
    },
    "ActionButton": {
