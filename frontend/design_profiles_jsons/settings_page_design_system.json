  "layoutPatterns": {
    "settingsList": {
      "structure": "Grouped sections with dividers",
      "itemLayout": "flex justify-between items-center",
      "spacing": "No gaps between items, borders as dividers",
      "context": "List-based settings layout"
    },
    "actionButtons": {
      "spacing": "mb-4 for individual buttons",
      "fullWidth": "w-full for primary actions",
      "grouping": "Related actions grouped together",
      "context": "Button layout and spacing"
    }
  },
  "doNotRules": {
    "backgrounds": [
      "DO NOT apply gradients to settings cards - use solid white",
      "DO NOT add shadows to setting items",
      "DO NOT use colored backgrounds for regular setting items",
      "ONLY use colored backgrounds for section headers and support icons"
    ],
    "borders": [
      "DO NOT add outer borders to setting cards",
      "ONLY use bottom borders as item dividers",
      "DO NOT use thick borders - stick to border-gray-200"
    ],
    "colors": [
      "DO NOT use purple for regular text - only for actions and icons",
      "DO NOT mix icon colors within same context",
      "Support icons: purple for help, orange for contact",
      "DO NOT use gradients except on upgrade buttons"
    ],
    "spacing": [
      "DO NOT add gaps between setting items",
      "DO NOT use card-like spacing - items should touch borders",
      "DO NOT add extra padding to button groups"
    ],
    "buttons": [
      "DO NOT use gradients on regular action buttons",
      "ONLY destructive actions get red styling",
      "DO NOT make secondary buttons look like primary buttons",
      "Sign out buttons are neutral, not destructive"
    ]
  },
  "componentMapping": {
    "SettingsPage": {
      "baseClass": "min-h-screen bg-gray-50",
