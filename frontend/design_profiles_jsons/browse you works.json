{
    "designSystem": {
      "name": "Imaginary Worlds Characters Library Page",
      "type": "character_management_interface",
      "framework": "react_typescript_tailwind",
      "layout": "search_filter_card_grid"
    },
    "colorPalette": {
      "primary": {
        "purple": "#8B5CF6",
        "purpleDark": "#7C3AED",
        "purpleLight": "#A78BFA"
      },
      "genre": {
        "fantasy": "#FB923C",
        "adventure": "#F97316",
        "comedy": "#FBBF24"
      },
      "neutral": {
        "white": "#FFFFFF",
        "gray50": "#F9FAFB",
        "gray100": "#F3F4F6",
        "gray200": "#E5E7EB",
        "gray300": "#D1D5DB",
        "gray400": "#9CA3AF",
        "gray500": "#6B7280",
        "gray600": "#4B5563",
        "gray700": "#374151",
        "gray800": "#1F2937",
        "gray900": "#111827"
      },
      "accent": {
        "pink": "#EC4899"
      },
      "backgrounds": {
        "page": "#F9FAFB",
        "card": "#FFFFFF"
      }
    },
    "elementStyling": {
      "pageContainer": {
        "background": "bg-gray-50",
        "padding": "p-6 pb-24",
        "minHeight": "min-h-screen",
        "context": "Full page wrapper - light gray background"
      },
      "pageHeader": {
        "container": {
          "display": "flex items-center justify-between",
          "spacing": "mb-6",
          "context": "Header with back button, title, and create button"
        },
        "leftSection": {
          "display": "flex items-center",
          "spacing": "space-x-3",
          "context": "Back button + title group"
        },
        "backButton": {
          "size": "h-6 w-6",
          "color": "text-gray-700",
          "hover": "hover:text-gray-900",
          "context": "Back navigation arrow"
        },
        "titleGroup": {
          "title": {
            "color": "text-gray-900",
            "fontSize": "text-2xl",
            "fontWeight": "font-bold",
            "context": "Page title - Characters Library"
          },
          "subtitle": {
            "color": "text-gray-500",
            "fontSize": "text-sm",
            "spacing": "mt-1",
            "context": "Page description - Meet your story characters"
          }
        },
        "createButton": {
          "background": "bg-purple-500",
          "color": "text-white",
          "borderRadius": "rounded-lg",
          "padding": "px-4 py-2",
          "fontSize": "text-sm",
          "fontWeight": "font-medium",
          "display": "flex items-center",
          "spacing": "space-x-2",
          "hover": "hover:bg-purple-600",
          "context": "Create new character button - purple CTA"
        },
        "createIcon": {
          "size": "h-4 w-4",
          "color": "text-white",
          "context": "Plus icon inside create button"
        }
      },
      "searchBar": {
        "container": {
          "background": "bg-white",
          "border": "border border-gray-200",
          "borderRadius": "rounded-lg",
          "padding": "px-4 py-3",
          "display": "flex items-center",
          "spacing": "space-x-2 mb-4",
          "context": "Search input container"
        },
        "icon": {
          "size": "h-5 w-5",
          "color": "text-gray-400",
          "context": "Search icon - gray color"
        },
        "input": {
          "background": "bg-transparent",
          "border": "border-0",
          "color": "text-gray-900",
          "fontSize": "text-sm",
          "placeholder": "placeholder-gray-400",
          "width": "w-full",
          "focus": "focus:outline-none",
          "context": "Search input field - Search characters..."
        }
      },
      "filterBar": {
        "container": {
          "display": "flex items-center",
          "spacing": "space-x-3 mb-4",
          "context": "Filter dropdowns row"
        },
        "filterIcon": {
          "size": "h-5 w-5",
          "color": "text-gray-700",
          "context": "Filter funnel icon"
        },
        "dropdown": {
          "button": {
            "background": "bg-white",
            "border": "border border-gray-200",
            "borderRadius": "rounded-lg",
            "padding": "px-4 py-2",
            "fontSize": "text-sm",
            "color": "text-gray-700",
            "display": "flex items-center justify-between",
            "spacing": "space-x-2",
            "minWidth": "min-w-24",
            "hover": "hover:bg-gray-50",
            "context": "Filter dropdown buttons"
          },
          "icon": {
            "size": "h-4 w-4",
            "color": "text-gray-500",
            "context": "Chevron down icon"
          },
          "menu": {
            "background": "bg-white",
            "border": "border border-gray-200",
            "borderRadius": "rounded-lg",
            "shadow": "shadow-lg",
            "padding": "py-2",
            "position": "absolute z-10",
            "marginTop": "mt-2",
            "context": "Dropdown menu panel"
          },
          "item": {
            "default": {
              "padding": "px-4 py-2",
              "fontSize": "text-sm",
              "color": "text-gray-700",
              "hover": "hover:bg-gray-50",
              "cursor": "cursor-pointer",
              "context": "Dropdown menu items"
            },
            "selected": {
              "padding": "px-4 py-2",
              "fontSize": "text-sm",
              "color": "text-gray-900",
              "fontWeight": "font-medium",
              "display": "flex items-center",
              "spacing": "space-x-2",
              "background": "bg-pink-50",
              "context": "Selected dropdown item with checkmark and pink background"
            },
            "checkmark": {
              "size": "h-4 w-4",
              "color": "text-pink-500",
              "context": "Checkmark for selected items - PINK not purple"
            }
          }
        }
      },
      "resultsCount": {
        "color": "text-gray-500",
        "fontSize": "text-sm",
        "spacing": "mb-4",
        "context": "Results count text - 6 characters found"
      },
      "characterList": {
        "container": {
          "spacing": "space-y-4",
          "context": "Character cards list with vertical gaps"
        }
      },
      "characterCard": {
        "container": {
          "background": "bg-white",
          "borderRadius": "rounded-xl",
          "padding": "p-4",
          "shadow": "shadow-sm",
          "border": "border border-gray-100",
          "context": "Individual character cards"
        },
        "header": {
          "display": "flex items-center justify-between",
          "spacing": "mb-3",
          "context": "Character avatar/name section and edit button row"
        },
        "leftContent": {
          "display": "flex items-center",
          "spacing": "space-x-3",
          "context": "Avatar + character info group"
        },
        "avatar": {
          "size": "w-12 h-12",
          "borderRadius": "rounded-lg",
          "fontSize": "text-2xl",
          "display": "flex items-center justify-center",
          "context": "Character emoji avatar - larger than user avatars"
        },
        "characterInfo": {
          "name": {
            "color": "text-gray-900",
            "fontSize": "text-base",
            "fontWeight": "font-bold",
            "spacing": "mb-1",
            "context": "Character name"
          },
          "type": {
            "color": "text-gray-500",
            "fontSize": "text-sm",
            "context": "Character type - Magical Creature, Superhero, Animal"
          }
        },
        "editButton": {
          "background": "bg-gray-100",
          "color": "text-gray-600",
          "borderRadius": "rounded-lg",
          "padding": "p-2",
          "hover": "hover:bg-gray-200",
          "context": "Edit icon button - subtle gray styling"
        },
        "editIcon": {
          "size": "h-4 w-4",
          "color": "text-gray-600",
          "context": "Pencil/edit icon"
        },
        "traits": {
          "container": {
            "display": "flex items-center flex-wrap",
            "spacing": "gap-2 mb-3",
            "context": "Character trait badges row"
          },
          "genre": {
            "borderRadius": "rounded-full",
            "padding": "px-3 py-1",
            "fontSize": "text-xs",
            "fontWeight": "font-medium",
            "context": "Genre badges - Fantasy (orange), Adventure (dark orange), Comedy (yellow)"
          },
          "personality": {
            "background": "bg-gray-100",
            "color": "text-gray-700",
            "borderRadius": "rounded-full",
            "padding": "px-3 py-1",
            "fontSize": "text-xs",
            "fontWeight": "font-medium",
            "context": "Personality trait badges - Kind, Brave, Curious, etc."
          }
        },
        "description": {
          "color": "text-gray-600",
          "fontSize": "text-sm",
          "lineHeight": "leading-relaxed",
          "spacing": "mb-3",
          "context": "Character description text"
        },
        "metadata": {
          "container": {
            "display": "flex items-center justify-between",
            "context": "Usage stats and action button row"
          },
          "leftStats": {
            "display": "flex items-center",
            "spacing": "space-x-4",
            "context": "Stories used + likes group"
          },
          "stat": {
            "display": "flex items-center",
            "spacing": "space-x-1",
            "context": "Individual stat item"
          },
          "usageText": {
            "color": "text-gray-500",
            "fontSize": "text-sm",
            "context": "Used in X stories text"
          },
          "likes": {
            "icon": {
              "size": "h-4 w-4",
              "color": "text-pink-500",
              "context": "Heart icon - pink"
            },
            "count": {
              "color": "text-gray-500",
              "fontSize": "text-sm",
              "context": "Like count"
            }
          }
        },
        "useButton": {
          "background": "bg-white",
          "color": "text-purple-500",
          "border": "border border-purple-200",
          "borderRadius": "rounded-lg",
          "padding": "px-4 py-2",
          "fontSize": "text-sm",
          "fontWeight": "font-medium",
          "hover": "hover:bg-purple-50",
          "context": "Use in Story button - purple outline style"
        }
      }
    },
    "characterTypes": {
      "options": [
        "All",
        "Magical Creature",
        "Animal",
        "Superhero",
        "Robot",
        "Dragon",
        "Royal"
      ],
      "context": "Character type filter options - same structure as genre filters"
    },
    "filterOptions": {
      "characterType": {
        "label": "Character Type Filter (First Dropdown)",
        "options": ["All", "Magical Creature", "Animal", "Superhero", "Robot", "Dragon", "Royal"],
        "default": "All",
        "context": "Character type filter"
      },
      "genre": {
        "label": "Genre Filter (Second Dropdown)",
        "options": ["All", "Fantasy", "Adventure", "Sci-Fi", "Comedy", "Mystery", "Calm"],
        "default": "All",
        "context": "Genre/category filter - same as offline library"
      },
      "ownership": {
        "label": "Ownership Filter (Third Dropdown)",
        "options": ["All", "You", "Community"],
        "default": "All",
        "context": "Filter by character creator - user's own vs community characters"
      }
    },
    "genreBadgeColors": {
      "fantasy": {
        "background": "bg-orange-500",
        "color": "text-white",
        "context": "Fantasy genre - orange background"
      },
      "adventure": {
        "background": "bg-orange-600",
        "color": "text-white",
        "context": "Adventure genre - dark orange background"
      },
      "comedy": {
        "background": "bg-yellow-400",
        "color": "text-gray-900",
        "context": "Comedy genre - yellow background with dark text"
      }
    },
    "layoutPatterns": {
      "pageStructure": {
        "order": [
          "Header (Back + Title/Subtitle + Create Button)",
          "Search Bar",
          "Filter Bar (Icon + 3 Dropdowns)",
          "Results Count",
          "Character List"
        ],
        "context": "Top-to-bottom page flow"
      },
      "characterCard": {
        "structure": [
          "Header (Avatar + Name/Type + Edit Button)",
          "Traits Row (genre + personality badges)",
          "Description",
          "Footer (Usage stats + likes | Use in Story button)"
        ],
        "context": "Character card internal layout"
      }
    },
    "doNotRules": {
      "colors": [
        "DO NOT use purple for checkmarks in dropdowns - use PINK for characters page",
        "DO NOT use same color for all trait badges - genre gets brand colors, personality stays gray",
        "DO NOT style heart/like icons with colors other than pink",
        "DO NOT use purple background for selected dropdown items - use pink-50"
      ],
      "layout": [
        "DO NOT place create button in page flow - keep it in header opposite title",
        "DO NOT center-align character card content - keep left-aligned",
        "DO NOT remove avatar from character cards - it's key visual identifier",
        "DO NOT stack metadata items vertically - use horizontal layout"
      ],
      "avatars": [
        "DO NOT use circular avatars for characters - use rounded-lg squares",
        "DO NOT make avatars too small - w-12 h-12 is minimum",
        "DO NOT add background colors to avatar containers - emoji provides color"
      ],
      "buttons": [
        "DO NOT use solid purple for Use in Story buttons - outline style only",
        "DO NOT make edit buttons prominent - keep subtle gray",
        "DO NOT remove hover states from buttons"
      ],
      "badges": [
        "DO NOT use borders on trait badges - solid backgrounds only",
        "DO NOT make personality badges colorful - keep neutral gray",
        "Genre badges get brand colors, personality badges stay gray"
      ]
    },
    "componentMapping": {
      "CharactersLibraryPage": {
        "baseClass": "min-h-screen bg-gray-50 p-6 pb-24"
      },
      "PageHeader": {
        "container": "flex items-center justify-between mb-6",
        "leftSection": "flex items-center space-x-3",
        "backButton": "h-6 w-6 text-gray-700 hover:text-gray-900",
        "title": "text-2xl font-bold text-gray-900",
        "subtitle": "text-sm text-gray-500 mt-1",
        "createButton": "bg-purple-500 hover:bg-purple-600 text-white rounded-lg px-4 py-2 text-sm font-medium flex items-center space-x-2"
      },
      "SearchBar": {
        "container": "bg-white border border-gray-200 rounded-lg px-4 py-3 flex items-center space-x-2 mb-4",
        "icon": "h-5 w-5 text-gray-400",
        "input": "bg-transparent border-0 text-sm text-gray-900 placeholder-gray-400 w-full focus:outline-none"
      },
      "FilterBar": {
        "container": "flex items-center space-x-3 mb-4",
        "filterIcon": "h-5 w-5 text-gray-700"
      },
      "FilterDropdown": {
        "button": "bg-white border border-gray-200 rounded-lg px-4 py-2 text-sm text-gray-700 flex items-center justify-between space-x-2 min-w-24 hover:bg-gray-50",
        "menu": "absolute z-10 bg-white border border-gray-200 rounded-lg shadow-lg py-2 mt-2",
        "item": "px-4 py-2 text-sm text-gray-700 hover:bg-gray-50 cursor-pointer",
        "selectedItem": "px-4 py-2 text-sm text-gray-900 font-medium bg-pink-50 flex items-center space-x-2",
        "checkmark": "h-4 w-4 text-pink-500"
      },
      "CharacterCard": {
        "container": "bg-white rounded-xl p-4 shadow-sm border border-gray-100",
        "header": "flex items-center justify-between mb-3",
        "leftContent": "flex items-center space-x-3",
        "avatar": "w-12 h-12 rounded-lg text-2xl flex items-center justify-center",
        "name": "text-base font-bold text-gray-900 mb-1",
        "type": "text-sm text-gray-500",
        "editButton": "bg-gray-100 hover:bg-gray-200 text-gray-600 rounded-lg p-2",
        "traitsRow": "flex items-center flex-wrap gap-2 mb-3",
        "description": "text-sm text-gray-600 leading-relaxed mb-3",
        "metadataRow": "flex items-center justify-between"
      },
      "GenreBadge": {
        "fantasy": "bg-orange-500 text-white rounded-full px-3 py-1 text-xs font-medium",
        "adventure": "bg-orange-600 text-white rounded-full px-3 py-1 text-xs font-medium",
        "comedy": "bg-yellow-400 text-gray-900 rounded-full px-3 py-1 text-xs font-medium"
      },
      "PersonalityBadge": {
        "baseClass": "bg-gray-100 text-gray-700 rounded-full px-3 py-1 text-xs font-medium"
      },
      "UseInStoryButton": {
        "baseClass": "bg-white hover:bg-purple-50 text-purple-500 border border-purple-200 rounded-lg px-4 py-2 text-sm font-medium"
      },
      "EditButton": {
        "baseClass": "bg-gray-100 hover:bg-gray-200 text-gray-600 rounded-lg p-2"
      }
    },
    "interactionPatterns": {
      "filtering": {
        "behavior": "Three independent filters: Character Type, Genre, Ownership",
        "feedback": "Results count updates dynamically",
        "context": "Multi-criteria character filtering"
      },
      "search": {
        "behavior": "Real-time search as user types",
        "scope": "Searches character names and descriptions",
        "placeholder": "Search characters...",
        "context": "Text-based character discovery"
      },
      "characterActions": {
        "edit": "Opens character editor for modifications",
        "useInStory": "Adds character to current or new story",
        "context": "Primary character management actions"
      },
      "creation": {
        "trigger": "Prominent Create button in header",
        "behavior": "Opens character creation flow",
        "context": "Easy access to create new characters"
      }
    },
    "uniqueFeatures": {
      "pinkAccents": {
        "checkmarks": "Dropdown checkmarks are pink (not purple)",
        "selectedBackground": "Selected dropdown items have bg-pink-50",
        "likes": "Like hearts are pink",
        "context": "Characters page uses pink accent color for selection states"
      },
      "avatarStyle": {
        "shape": "Rounded square (rounded-lg) not circular",
        "size": "Larger than user avatars (w-12 h-12)",
        "content": "Emoji characters representing the character",
        "context": "Character visual identity"
      },
      "dualMetrics": {
        "usage": "Shows which stories character appears in",
        "engagement": "Shows like count for character popularity",
        "context": "Character reusability and popularity tracking"
      }
    },
    "stateManagement": {
      "filterStates": {
        "characterType": "Selected character type",
        "genre": "Selected genre",
        "ownership": "User's own vs community characters"
      },
      "searchState": {
        "query": "Current search string",
        "results": "Filtered character list"
      }
    },
    "accessibility": {
      "createButton": "Prominent CTA with clear icon and label",
      "characterAvatars": "Alt text describing character emoji/image",
      "editActions": "Clear edit button with proper ARIA labels",
      "usageStats": "Screen reader announces character usage in stories"
    },
    "responsiveConsiderations": {
      "mobile": "Current layout optimized for mobile",
      "headerButton": "Create button may wrap below title on very small screens",
      "traitsRow": "Badge row wraps naturally as needed"
    }
  }