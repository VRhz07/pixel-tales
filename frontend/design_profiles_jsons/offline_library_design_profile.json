      },
      "search": {
        "behavior": "Real-time search as user types",
        "scope": "Searches collection titles and descriptions",
        "placeholder": "Search story collections...",
        "context": "Filter collections by keyword"
      },
      "download": {
        "behavior": "Click download button to save collection",
        "feedback": "Button state changes or success message",
        "context": "Download collection for offline access"
      }
    },
    "stateManagement": {
      "filterStates": {
        "category": "Tracks selected genre/category",
        "ageRange": "Tracks selected age range",
        "difficulty": "Tracks selected difficulty level"
      },
      "searchState": {
        "query": "Current search string",
        "results": "Filtered collection list"
      },
      "dropdownStates": {
        "open": "Which dropdown is currently open",
        "selectedValue": "Currently selected option per dropdown"
      }
    },
    "accessibility": {
      "dropdowns": "Keyboard navigation support for dropdown menus",
      "search": "Screen reader announces search results count",
      "filters": "Clear labels and ARIA attributes for filters",
      "buttons": "Proper focus states on all interactive elements"
