{
  "designSystem": {
    "metadata": {
      "name": "EduTrack Parent Dashboard",
      "type": "Educational Learning Platform",
      "framework": "React + TypeScript + Tailwind CSS",
      "designLanguage": "Modern, clean, child-friendly with vibrant accents"
    },
    
    "colorPalette": {
      "primary": {
        "teal": {
          "main": "#3DBAB8",
          "light": "#5AC8C6",
          "dark": "#2A9B99",
          "description": "Primary brand color - used for active states, primary buttons, and key UI elements"
        },
        "cyan": {
          "main": "#4DD4D1",
          "description": "Accent color for highlights and interactive elements"
        }
      },
      "secondary": {
        "orange": {
          "main": "#FF9A5C",
          "light": "#FFB180",
          "description": "Used for warning states, time indicators, and secondary CTAs"
        },
        "green": {
          "main": "#5FD99E",
          "light": "#7FE4B3",
          "description": "Success states, positive metrics, achievement indicators"
        },
        "yellow": {
          "main": "#FFD93D",
          "light": "#FFE570",
          "description": "Progress indicators and attention-grabbing elements"
        }
      },
      "cardGradients": {
        "purple": "linear-gradient(135deg, #D896FF 0%, #B57CE8 100%)",
        "green": "linear-gradient(135deg, #5FD99E 0%, #4BC788 100%)",
        "orange": "linear-gradient(135deg, #FFB347 0%, #FF9A5C 100%)",
        "blue": "linear-gradient(135deg, #5DADE2 0%, #3498DB 100%)",
        "pink": "linear-gradient(135deg, #FF8FA3 0%, #FF6B81 100%)",
        "cyan": "linear-gradient(135deg, #4DD4D1 0%, #3DBAB8 100%)",
        "description": "Story cards and activity cards use these gradients on card backgrounds only"
      },
      "neutrals": {
        "background": "#F5F7FA",
        "cardBackground": "#FFFFFF",
        "border": "#E8ECEF",
        "textPrimary": "#1A1A1A",
        "textSecondary": "#6B7280",
        "textTertiary": "#9CA3AF",
        "description": "Neutral colors for backgrounds, borders, and text hierarchy"
      },
      "dataVisualization": {
        "chartTeal": "#3DBAB8",
        "chartOrange": "#FF9A5C",
        "chartBackground": "#F8FAFB",
        "gridLines": "#E8ECEF"
      }
    },

    "typography": {
      "fontFamily": {
        "primary": "system-ui, -apple-system, 'Segoe UI', Roboto, sans-serif",
        "fallback": "Arial, sans-serif"
      },
      "scale": {
        "h1": {
          "size": "32px",
          "weight": "700",
          "lineHeight": "1.2",
          "letterSpacing": "-0.02em",
          "color": "#1A1A1A",
          "usage": "Page titles (e.g., 'Welcome back, Sarah!', 'Analytics')"
        },
        "h2": {
          "size": "24px",
          "weight": "700",
          "lineHeight": "1.3",
          "letterSpacing": "-0.01em",
          "color": "#1A1A1A",
          "usage": "Section headers (e.g., 'Recent Activity', 'Learning Goals')"
        },
        "h3": {
          "size": "18px",
          "weight": "600",
          "lineHeight": "1.4",
          "color": "#1A1A1A",
          "usage": "Card titles, story names"
        },
        "body": {
          "size": "16px",
          "weight": "400",
          "lineHeight": "1.5",
          "color": "#6B7280",
          "usage": "Descriptive text, subtitles"
        },
        "small": {
          "size": "14px",
          "weight": "500",
          "lineHeight": "1.4",
          "color": "#6B7280",
          "usage": "Labels, badges, metadata"
        },
        "caption": {
          "size": "12px",
          "weight": "400",
          "lineHeight": "1.4",
          "color": "#9CA3AF",
          "usage": "Timestamps, helper text"
        }
      },
      "statNumbers": {
        "size": "36px",
        "weight": "700",
        "lineHeight": "1.1",
        "color": "#1A1A1A",
        "usage": "Dashboard metrics (24, 8.5h, 15, 78%)"
      },
      "statChange": {
        "size": "14px",
        "weight": "600",
        "lineHeight": "1.4",
        "positiveColor": "#5FD99E",
        "neutralColor": "#FF9A5C",
        "usage": "Metric changes (+12% this week, +2h this week)"
      }
    },

    "spacing": {
      "base": 4,
      "scale": {
        "xs": "4px",
        "sm": "8px",
        "md": "16px",
        "lg": "24px",
        "xl": "32px",
        "2xl": "48px",
        "3xl": "64px"
      },
      "componentSpacing": {
        "cardPadding": "24px",
        "cardGap": "24px",
        "sectionGap": "32px",
        "headerPadding": "24px 32px",
        "contentMaxWidth": "1280px"
      }
    },

    "components": {
      "navigationBar": {
        "background": "#FFFFFF",
        "borderBottom": "1px solid #E8ECEF",
        "height": "72px",
        "padding": "0 32px",
        "logo": {
          "iconBackground": "linear-gradient(135deg, #4DD4D1 0%, #3DBAB8 100%)",
          "iconColor": "#FFFFFF",
          "iconSize": "24px",
          "iconPadding": "12px",
          "borderRadius": "12px"
        },
        "navItems": {
          "default": {
            "color": "#6B7280",
            "fontWeight": "500",
            "fontSize": "15px",
            "padding": "8px 16px",
            "iconColor": "#9CA3AF"
          },
          "active": {
            "color": "#3DBAB8",
            "background": "#E6F7F7",
            "borderRadius": "8px",
            "iconColor": "#3DBAB8"
          },
          "hover": {
            "color": "#1A1A1A",
            "background": "#F5F7FA",
            "borderRadius": "8px"
          }
        }
      },

      "statCard": {
        "container": {
          "background": "#FFFFFF",
          "border": "1px solid #E8ECEF",
          "borderRadius": "16px",
          "padding": "24px",
          "shadow": "0 1px 3px rgba(0, 0, 0, 0.05)",
          "hoverShadow": "0 4px 12px rgba(0, 0, 0, 0.08)",
          "transition": "all 0.3s ease"
        },
        "icon": {
          "background": "#F5F7FA",
          "padding": "12px",
          "borderRadius": "12px",
          "size": "24px",
          "colors": {
            "stories": "#3DBAB8",
            "time": "#FF9A5C",
            "achievements": "#5FD99E",
            "progress": "#FFD93D"
          }
        },
        "label": {
          "color": "#6B7280",
          "fontSize": "14px",
          "fontWeight": "500",
          "marginBottom": "8px"
        },
        "value": {
          "color": "#1A1A1A",
          "fontSize": "36px",
          "fontWeight": "700",
          "marginBottom": "8px"
        },
        "change": {
          "fontSize": "14px",
          "fontWeight": "600",
          "positiveColor": "#5FD99E",
          "neutralColor": "#FF9A5C"
        }
      },

      "activityCard": {
        "container": {
          "background": "#FFFFFF",
          "border": "none",
          "borderRadius": "12px",
          "padding": "16px",
          "marginBottom": "12px",
          "hover": {
            "background": "#F8FAFB",
            "cursor": "pointer"
          }
        },
        "iconContainer": {
          "background": "linear-gradient(135deg, #4DD4D1 0%, #3DBAB8 100%)",
          "size": "56px",
          "borderRadius": "12px",
          "iconColor": "#FFFFFF",
          "iconSize": "28px"
        },
        "progressBar": {
          "height": "6px",
          "background": "#E8ECEF",
          "borderRadius": "3px",
          "fill": "#3DBAB8",
          "fillBorderRadius": "3px"
        },
        "timestamp": {
          "color": "#9CA3AF",
          "fontSize": "13px",
          "fontWeight": "400"
        },
        "rating": {
          "starColor": "#FFD93D",
          "starSize": "18px",
          "gap": "4px"
        }
      },

      "goalProgressBar": {
        "container": {
          "marginBottom": "20px"
        },
        "label": {
          "fontSize": "15px",
          "fontWeight": "500",
          "color": "#1A1A1A",
          "marginBottom": "8px"
        },
        "progressContainer": {
          "height": "8px",
          "background": "#E8ECEF",
          "borderRadius": "4px",
          "overflow": "hidden"
        },
        "progressFill": {
          "background": "#3DBAB8",
          "height": "100%",
          "borderRadius": "4px",
          "transition": "width 0.6s ease"
        },
        "percentage": {
          "fontSize": "14px",
          "fontWeight": "600",
          "color": "#6B7280"
        }
      },

      "storyCard": {
        "container": {
          "background": "#FFFFFF",
          "borderRadius": "16px",
          "overflow": "hidden",
          "shadow": "0 2px 8px rgba(0, 0, 0, 0.08)",
          "hoverShadow": "0 8px 24px rgba(0, 0, 0, 0.12)",
          "transition": "all 0.3s ease",
          "hoverTransform": "translateY(-4px)"
        },
        "imageContainer": {
          "height": "200px",
          "gradient": "USE cardGradients",
          "iconColor": "#FFFFFF",
          "iconSize": "80px",
          "iconOpacity": "0.9",
          "display": "flex",
          "alignItems": "center",
          "justifyContent": "center"
        },
        "content": {
          "padding": "20px",
          "background": "#FFFFFF"
        },
        "title": {
          "fontSize": "18px",
          "fontWeight": "600",
          "color": "#1A1A1A",
          "marginBottom": "12px"
        },
        "badges": {
          "category": {
            "background": "#F5F7FA",
            "color": "#6B7280",
            "padding": "4px 12px",
            "borderRadius": "6px",
            "fontSize": "13px",
            "fontWeight": "500"
          },
          "difficulty": {
            "easy": {
              "background": "#E6F7F0",
              "color": "#5FD99E"
            },
            "medium": {
              "background": "#FFF4E6",
              "color": "#FF9A5C"
            }
          }
        },
        "metadata": {
          "color": "#9CA3AF",
          "fontSize": "14px",
          "iconColor": "#9CA3AF",
          "iconSize": "16px"
        },
        "completionCheckmark": {
          "background": "#5FD99E",
          "color": "#FFFFFF",
          "size": "24px",
          "borderRadius": "50%",
          "position": "absolute",
          "top": "16px",
          "right": "16px"
        }
      },

      "buttons": {
        "primary": {
          "background": "#3DBAB8",
          "color": "#FFFFFF",
          "padding": "12px 24px",
          "borderRadius": "10px",
          "fontSize": "15px",
          "fontWeight": "600",
          "border": "none",
          "shadow": "0 2px 4px rgba(61, 186, 184, 0.2)",
          "hover": {
            "background": "#2A9B99",
            "shadow": "0 4px 12px rgba(61, 186, 184, 0.3)",
            "transform": "translateY(-1px)"
          },
          "active": {
            "background": "#238F8D",
            "transform": "translateY(0)"
          },
          "disabled": {
            "background": "#E8ECEF",
            "color": "#9CA3AF",
            "cursor": "not-allowed",
            "shadow": "none"
          }
        },
        "secondary": {
          "background": "#FFFFFF",
          "color": "#3DBAB8",
          "border": "1px solid #E8ECEF",
          "padding": "12px 24px",
          "borderRadius": "10px",
          "fontSize": "15px",
          "fontWeight": "600",
          "hover": {
            "background": "#F8FAFB",
            "borderColor": "#3DBAB8"
          },
          "active": {
            "background": "#E6F7F7"
          }
        },
        "iconButton": {
          "background": "transparent",
          "color": "#6B7280",
          "padding": "8px",
          "borderRadius": "8px",
          "hover": {
            "background": "#F5F7FA",
            "color": "#1A1A1A"
          }
        }
      },

      "charts": {
        "barChart": {
          "barColor": "#3DBAB8",
          "barBorderRadius": "6px 6px 0 0",
          "barHover": {
            "color": "#2A9B99",
            "cursor": "pointer"
          },
          "gridLines": "#E8ECEF",
          "axisLabels": {
            "color": "#9CA3AF",
            "fontSize": "13px",
            "fontWeight": "500"
          },
          "background": "transparent"
        },
        "lineChart": {
          "lineColor": "#FF9A5C",
          "lineWidth": "3px",
          "pointColor": "#FF9A5C",
          "pointSize": "8px",
          "pointBorder": "3px solid #FFFFFF",
          "areaFill": "rgba(255, 154, 92, 0.1)",
          "gridLines": "#E8ECEF",
          "axisLabels": {
            "color": "#9CA3AF",
            "fontSize": "13px",
            "fontWeight": "500"
          }
        }
      },

      "activityCardGrid": {
        "container": {
          "background": "#FFFFFF",
          "borderRadius": "16px",
          "padding": "24px",
          "border": "1px solid #E8ECEF",
          "shadow": "0 1px 3px rgba(0, 0, 0, 0.05)"
        },
        "header": {
          "iconBackground": "USE cardGradients",
          "iconColor": "#FFFFFF",
          "iconSize": "32px",
          "iconPadding": "16px",
          "iconBorderRadius": "12px",
          "pointsBadge": {
            "background": "rgba(255, 255, 255, 0.3)",
            "color": "#FFFFFF",
            "fontSize": "13px",
            "fontWeight": "600",
            "padding": "6px 12px",
            "borderRadius": "8px"
          }
        },
        "categoryBadge": {
          "background": "#F5F7FA",
          "color": "#6B7280",
          "fontSize": "12px",
          "fontWeight": "500",
          "padding": "4px 10px",
          "borderRadius": "6px"
        },
        "difficultyBadge": {
          "easy": {
            "background": "#E6F7F0",
            "color": "#5FD99E"
          },
          "medium": {
            "background": "#FFF4E6",
            "color": "#FF9A5C"
          }
        },
        "progressBar": {
          "height": "8px",
          "background": "#E8ECEF",
          "borderRadius": "4px",
          "fill": "#3DBAB8"
        }
      }
    },

    "effects": {
      "shadows": {
        "sm": "0 1px 3px rgba(0, 0, 0, 0.05)",
        "md": "0 2px 8px rgba(0, 0, 0, 0.08)",
        "lg": "0 4px 12px rgba(0, 0, 0, 0.08)",
        "xl": "0 8px 24px rgba(0, 0, 0, 0.12)",
        "button": "0 2px 4px rgba(61, 186, 184, 0.2)",
        "buttonHover": "0 4px 12px rgba(61, 186, 184, 0.3)"
      },
      "borderRadius": {
        "sm": "6px",
        "md": "10px",
        "lg": "12px",
        "xl": "16px",
        "full": "9999px"
      },
      "transitions": {
        "default": "all 0.3s ease",
        "fast": "all 0.15s ease",
        "slow": "all 0.6s ease"
      }
    },

    "layoutPatterns": {
      "dashboardGrid": {
        "statsRow": {
          "display": "grid",
          "gridTemplateColumns": "repeat(4, 1fr)",
          "gap": "24px",
          "marginBottom": "32px"
        },
        "contentGrid": {
          "display": "grid",
          "gridTemplateColumns": "2fr 1fr",
          "gap": "24px"
        },
        "storyGrid": {
          "display": "grid",
          "gridTemplateColumns": "repeat(auto-fill, minmax(320px, 1fr))",
          "gap": "24px"
        },
        "activityGrid": {
          "display": "grid",
          "gridTemplateColumns": "repeat(auto-fill, minmax(300px, 1fr))",
          "gap": "24px"
        }
      },
      "responsive": {
        "breakpoints": {
          "mobile": "640px",
          "tablet": "768px",
          "desktop": "1024px",
          "wide": "1280px"
        },
        "mobileOverrides": {
          "statsRow": "grid-template-columns: repeat(2, 1fr)",
          "contentGrid": "grid-template-columns: 1fr",
          "storyGrid": "grid-template-columns: 1fr"
        }
      }
    },

    "stateManagement": {
      "hover": {
        "cards": "Elevate with shadow, slight translateY(-2px)",
        "buttons": "Darken background, elevate shadow, translateY(-1px)",
        "links": "Change color from secondary to primary"
      },
      "active": {
        "buttons": "Further darken, remove translateY",
        "tabs": "Apply active background and color changes"
      },
      "disabled": {
        "opacity": "0.5",
        "cursor": "not-allowed",
        "removeInteractions": true
      },
      "loading": {
        "skeleton": {
          "background": "linear-gradient(90deg, #F5F7FA 25%, #E8ECEF 50%, #F5F7FA 75%)",
          "animation": "shimmer 1.5s infinite"
        }
      }
    },

    "accessibilityRules": {
      "colorContrast": {
        "textOnWhite": "Minimum 4.5:1 ratio",
        "textOnTeal": "Use white (#FFFFFF) for sufficient contrast",
        "textOnGradients": "Always use white text"
      },
      "focusStates": {
        "outline": "2px solid #3DBAB8",
        "outlineOffset": "2px",
        "borderRadius": "inherit"
      },
      "minimumTouchTargets": "44px Ã— 44px for interactive elements"
    },

    "doNotRules": {
      "gradients": [
        "DO NOT apply card gradients to text elements",
        "DO NOT apply card gradients to icon containers - only to card image areas",
        "DO NOT mix gradient backgrounds with text directly - always use solid colors for text",
        "DO NOT apply gradients to buttons - use solid colors"
      ],
      "colors": [
        "DO NOT use teal gradient on small UI elements like badges or tags",
        "DO NOT apply primary button colors to card backgrounds",
        "DO NOT use card background colors on text",
        "DO NOT mix chart colors with UI element colors"
      ],
      "shadows": [
        "DO NOT apply shadows to text",
        "DO NOT apply multiple shadow layers on the same element",
        "DO NOT use shadows on elements inside cards that already have shadows",
        "DO NOT apply button shadows to regular cards"
      ],
      "spacing": [
        "DO NOT use inconsistent padding within the same component type",
        "DO NOT reduce touch target sizes below 44px on mobile",
        "DO NOT mix spacing scales within a single component"
      ],
      "typography": [
        "DO NOT use different font weights for the same hierarchy level",
        "DO NOT apply stat number styling to regular text",
        "DO NOT use body text colors for headings"
      ]
    },

    "implementationGuidelines": {
      "tailwindMapping": {
        "colors": {
          "primary-teal": "#3DBAB8",
          "primary-cyan": "#4DD4D1",
          "secondary-orange": "#FF9A5C",
          "secondary-green": "#5FD99E",
          "secondary-yellow": "#FFD93D",
          "neutral-50": "#F5F7FA",
          "neutral-100": "#E8ECEF",
          "neutral-400": "#9CA3AF",
          "neutral-500": "#6B7280",
          "neutral-900": "#1A1A1A"
        },
        "spacing": {
          "card-padding": "p-6",
          "card-gap": "gap-6",
          "section-gap": "gap-8"
        },
        "borderRadius": {
          "card": "rounded-2xl",
          "button": "rounded-xl",
          "badge": "rounded-lg",
          "icon": "rounded-xl"
        }
      },
      "reactPatterns": {
        "statCard": "Separate component with icon, value, label, and change props",
        "progressBar": "Reusable component with percentage and label props",
        "storyCard": "Component with gradient variant, completion state, and metadata",
        "activityCard": "Component with icon, progress, timestamp, and rating"
      }
    }
  }
}