  "layoutPatterns": {
    "listItems": {
      "structure": "Card-based list with consistent spacing",
      "itemLayout": "flex justify-between items-center",
      "spacing": "space-y-3 between items",
      "cardStyling": "Rounded corners, subtle shadows, white background",
      "context": "Both leaderboard and social lists use same pattern"
    },
    "userRepresentation": {
      "structure": "Rank/Status + Avatar + Info + Actions",
      "avatarSizing": "Consistent w-10 h-10 across all contexts",
      "infoHierarchy": "Name (bold) > Stats/Activity (muted)",
      "context": "Standard user representation pattern"
    }
  },
  "doNotRules": {
    "backgrounds": [
      "DO NOT use gradients on list items - keep white backgrounds",
      "DO NOT apply page background to individual cards",
      "DO NOT mix avatar background colors - each user has consistent color",
      "ONLY use colored backgrounds on rank badges and status indicators"
    ],
    "spacing": [
      "DO NOT remove gaps between list items - maintain space-y-3",
      "DO NOT use tight padding on cards - maintain p-4",
      "DO NOT stack elements without proper spacing"
    ],
    "colors": [
      "DO NOT use purple for rank badges - use gold/silver/bronze system",
      "DO NOT mix status indicator colors - green for online only",
      "DO NOT use dark backgrounds for user avatars - keep pastel",
      "Achievement emojis are decorative - no color styling needed"
    ],
    "badges": [
      "DO NOT style emoji badges with CSS colors - they're already colored",
      "DO NOT make rank badges too large - w-8 h-8 maximum",
      "DO NOT use text rank badges for top 3 - use colored circular badges"
    ],
    "consistency": [
      "DO NOT vary card styling between leaderboard and social sections",
      "DO NOT change avatar sizing between contexts",
      "DO NOT use different shadow styles for list items"
    ]
  },
