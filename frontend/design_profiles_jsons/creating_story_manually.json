    "layoutPatterns": {
      "pageStructure": {
        "order": [
          "Sticky Header (Back + Title/Subtitle + Save)",
          "Content Area:",
          "  - Story Title Section",
          "  - Canvas Section (with Edit button)",
          "  - Page Management Section (with pagination and thumbnails)",
          "  - Page Editor Section (per page)",
          "Sticky Bottom Actions (Characters + AI Assistant)"
        ],
        "context": "Scrollable content between sticky header and footer"
      },
      "sectionPattern": {
        "structure": "White card with rounded corners, shadow, and padding",
        "header": "Icon + Title on left, Action button on right",
        "content": "Section-specific content area",
        "context": "Consistent section card pattern"
      }
    },
    "iconColorSystem": {
      "pageManagement": "text-pink-500",
      "canvas": "text-purple-500",
      "pageEditor": "text-orange-500",
      "context": "Different sections use different icon colors for visual hierarchy"
    },
    "doNotRules": {
      "colors": [
        "DO NOT use same icon color for all sections - Page Management=pink, Canvas=purple, Page=orange",
        "DO NOT use gradients on any buttons or sections",
        "DO NOT style text area with white background initially - use gray-50",
        "DO NOT use colored backgrounds on outline buttons - keep white with colored borders"
      ],
      "layout": [
        "DO NOT make header or bottom actions scroll with content - keep sticky",
        "DO NOT center-align text areas or inputs - left-align content",
        "DO NOT remove max-width constraint from content area",
        "DO NOT place save button in page flow - keep in sticky header"
      ],
      "canvas": [
        "DO NOT use solid border for canvas area - use dashed border",
        "DO NOT make canvas area too small - min-h-64 minimum",
        "DO NOT use white background for empty canvas - use gray-50"
      ],
      "buttons": [
        "DO NOT use solid purple backgrounds on secondary actions - outline style",
        "DO NOT remove icons from action buttons",
        "DO NOT make all buttons same width - bottom actions are grid, others auto-width"
      ],
      "pagination": [
        "DO NOT hide page thumbnails - they're key navigation",
        "DO NOT make thumbnails too small - w-16 h-20 minimum",
        "DO NOT use non-purple border for active page thumbnail"
      ]
    },
