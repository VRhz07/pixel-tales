        "sortBy": "Selected sort option"
      },
      "searchState": {
        "query": "Current search string",
        "results": "Filtered and sorted story list"
      }
    },
    "accessibility": {
      "socialMetrics": "Screen reader announces rating scores and engagement counts",
      "authorInfo": "Proper semantic markup for author attribution",
      "readButtons": "Clear action labels and focus states",
      "sortingFeedback": "Announce sort order changes to screen readers"
    },
    "responsiveConsiderations": {
      "mobile": "Current layout optimized for mobile",
      "statsRow": "May wrap on very small screens",
      "filterBar": "Filters may wrap to multiple rows if needed"
    }
  }