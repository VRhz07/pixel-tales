# Django Settings
# ⚠️ IMPORTANT: Set DEBUG=True ONLY for local development
# Production (Render) should have DEBUG=False or not set at all
DEBUG=True
SECRET_KEY=your-secret-key-here
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (SQLite by default)
DATABASE_URL=sqlite:///db.sqlite3

# Google AI API
GOOGLE_AI_API_KEY=your-google-ai-api-key-here

# OCR.space API (for text extraction)
OCR_SPACE_API_KEY=your-ocr-space-api-key-here

# CORS Settings for React Frontend
FRONTEND_URL=http://localhost:3000

# JWT Settings (Mobile App Configuration)
# Long-lived tokens for mobile app experience (like Facebook)
# Users stay logged in until they manually log out
JWT_ACCESS_TOKEN_LIFETIME_DAYS=30
JWT_REFRESH_TOKEN_LIFETIME_DAYS=365

# Media and Static Files
MEDIA_ROOT=media/
STATIC_ROOT=staticfiles/

# SendGrid Email Settings
SENDGRID_API_KEY=your-sendgrid-api-key-here
FROM_EMAIL=werpixeltales@gmail.com
EMAIL_VERIFICATION_EXPIRY_MINUTES=15

# Pollinations AI API (for image generation)
POLLINATIONS_API_KEY=your-pollinations-api-key-here

# Replicate API (for image generation with FLUX and Stable Diffusion)
# Sign up at https://replicate.com to get free credits
REPLICATE_API_TOKEN=your-replicate-api-token-here
